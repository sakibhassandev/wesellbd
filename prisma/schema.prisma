generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @map("_id")
    firstName String
    lastName  String
    email     String   @unique
    imageUrl  String
    cartItems Json     @default("{}")
    createdAt DateTime @default(now())
}
